<comps>

		<!-- Window 1 -->
		<Window id="mainWindow" title="NX developer menu" width="480" height="300" hasMinimizeButton="true">
			<!-- Section 1 -->
			<Label id="animationLabel" x="10" y="10" text="Animation:"/>
			<ComboBox id="animationSelector"  x="60" y="10" width="120"/>
			<Label id="shardTypeLabel" x="190" y="10" text="Type:"/>
			<ComboBox id="shardTypeSelector"  x="220" y="10" width="70"/>
			<Label id="characterLabel" x="305" y="10" text="Character:"/>
			<ComboBox id="characterSelector"  x="360" y="10" width="110"/>
			<Label id="shardLabel" x="10" y="40" text="Shard:"/>
			<ComboBox id="shardSelector"  x="45" y="40" width="300"/>
			<PushButton id="addShardButton" x="355" y="40" width="80" label="Add Shard to list" />
			<Label id="ShardInfoLabel" x="10" y="60" text="Shard information"/>
			<TextArea id="shardInfoText" x="0" y="80" width="480" height="35" editable="false"/>
			<Label id="animListLabel" x="10" y="120" text="Animation list"/>
			<List id="animList" x="0" y="140" width="480" height="100"/>
			<PushButton id="removeShardButton" x="5" y="250" width="150" label="Remove selected shard from list" />
			<PushButton id="finalizeButton" x="165" y="250" width="90" label="Compile animation" />
			<PushButton id="loadAnimationListButton" x="265" y="250" width="100" label="Load Animation List" />
			<PushButton id="saveAnimationListButton" x="375" y="250" width="100" label="Save Animation List" />	
		</Window>
		
		<!-- Window 2 Animation Playback -->
		<Window id="animPlayWindow" title="Animation playback window" x="0" y="310" width="480" height="100" hasMinimizeButton="true" minimized="false">
			<!-- Section 1 Animation play progress -->
			<PushButton id="animPlayButton" x="10" y="10" label="Play" width="50" toggle="false"/>
			<PushButton id="animPauseButton" x="70" y="10" label="Pause" width="50" toggle="false"/>
			<Label id="timeLabel" x="130" y="10" text="Time:"/>
			<Label id="timeText" x="160" y="10" text=""/>
			<Label id="frameLabel" x="220" y="10" text="Keyframe:"/>
			<Label id="frameText" x="270" y="10" text=""/>
			
			<!-- Section 2 Changing frame for animation-->
			<Label id="frameSettingLabel" x="10" y="30" text="Frame Settings"/>
			<PushButton id="-1F" x="10" y="50" label="-1F" width="30"/>
			<PushButton id="-5F" x="40" y="50" label="-5F" width="30"/>
			<PushButton id="-10F" x="70" y="50" label="-10F" width="30"/>
			<PushButton id="+1F" x="110" y="50" label="+1F" width="30"/>
			<PushButton id="+5F" x="140" y="50" label="+5F" width="30"/>
			<PushButton id="+10F" x="170" y="50" label="+10F" width="30"/>
			<PushButton id="setFrameButton" x="210" y="50" label="Set to frame" width="80"/>
			<HUISlider id="frameSlider" x="300" y="50" label="" minimum="1" value="1" labelPrecision="0"/>
		</Window>
		
		<!-- Window 3 Actor window -->
		 <Window id="actorWindow" title="Actor edit window" x="0" y="420" width="480" height="170" hasMinimizeButton="true" minimized="false">
			<ComboBox id="actorSelector" x="0" y="00" width="140" height="20"/>
			<HGUISlider id="assetSelectSlider" x="210" y="0" width="300" minimum ="0" value="0" maximum="0" labelPrecision="0" tick="1.0" displaySize="64" />
			<TextArea id="assetInformation" x="219" y="15" width="250" height="50" editable="false"/>
			<PushButton id="applyAssetToActorButton" x="250" y="70" label="Set/Unset graphic for selected actor" width="180"/>
			 
			<Label id="graphicSetLabel" x="145" y="100" text="Graphic Set"/>
			<ComboBox id="gfxSetSelector" x="145" y="120" width="140" height="20" openPosition="top"/>
			<PushButton id="applySetToAllActorsButton" x="300" y="120" label="Apply set"  width="60"/>
			<PushButton id="removeSetToAllActorsButton" x="380" y="120" label="Remove set" width="60"/>
		</Window>
		
		<!-- Window 4 Debug output -->
		<Window id="consoleWindow" title="NX developer debug output" x="0" y="620" width="480" height="100" hasMinimizeButton="true" minimized="false">
			<TextArea id="debugOutput" x="0" y="00" width="480" height="80" editable="false"/>
		</Window>
	
</comps>