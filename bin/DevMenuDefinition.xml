	</Window>
	
	<!-- Section 4 Debug output -->
	<Window id="consoleWindow" title="NX developer debug output" x="0" y="560" width="480" height="160" hasMinimizeButton="true" minimized="true">
		<TextArea id="debugOutput" x="0" y="00" width="480" height="160" editable="false"/>
	</Window>
	
	<!-- Section 5 Tween testing -->
	<Window id="tweenWindow" title="Tween debug window" x="0" y="560" width="480" height="160" hasMinimizeButton="true" minimized="true">
		<ComboBox id="elementSelector" x="0" y="00" width="140" height="20"/>
		<HUISlider id="tweenSelectSlider" x="200" y="00" width="300" height="20" minimum ="0" value="0" maximum="0" labelPrecision="0"/>
		<Label id="tweenDataLabel" x="200" y="15" text="Element Data"/>
		<TextArea id="tweenEditor" x="200" y="35" width="260" height="100" editable="true"/>
	</Window>
	
	<!-- Section 6 Animation Playback -->
	<Window id="animPlayWindow" title="Animation playback window" x="0" y="560" width="480" height="160" hasMinimizeButton="true" minimized="true">
		<!-- Section 1 Animation play progress -->
		<PushButton id="animPlayButton" x="10" y="35" label="Play" width="50" toggle="false"/>
		<PushButton id="animPauseButton" x="70" y="35" label="Pause" width="50" toggle="false"/>
		<Label id="timeLabel" x="130" y="35" text="Time:"/>
		<Label id="timeText" x="160" y="35" text=""/>
		<Label id="frameLabel" x="220" y="35" text="Keyframe:"/>
		<Label id="frameText" x="270" y="35" text=""/>
		<!--  -<HUISlider id="animProgressSlider" x="220" y="35" label="Progress" labelPrecision="0"/><!- -->
		
		<!-- Section 2 Changing frame for animation-->
		<Label id="frameSettingLabel" x="10" y="60" text="Frame Settings"/>
		<PushButton id="-1F" x="10" y="80" label="-1F" width="30"/>
		<PushButton id="-5F" x="40" y="80" label="-5F" width="30"/>
		<PushButton id="-10F" x="70" y="80" label="-10F" width="30"/>
		<PushButton id="+1F" x="110" y="80" label="+1F" width="30"/>
		<PushButton id="+5F" x="140" y="80" label="+5F" width="30"/>
		<PushButton id="+10F" x="170" y="80" label="+10F" width="30"/>
		<PushButton id="setFrameButton" x="210" y="80" label="Set to frame" width="80"/>
		<HUISlider id="frameSlider" x="300" y="80" label="" minimum="1" value="1" labelPrecision="0"/>
	</Window>
	
